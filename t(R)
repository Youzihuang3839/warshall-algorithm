<body>
    <h1>Warshall算法求传递闭包</h1>
    <p class="description">输入矩阵的行列数，生成随机布尔矩阵，并使用Warshall算法计算其传递闭包</p>
    
    <div class="container">
        <div class="input-section">
            <input type="number" id="matrixSize" placeholder="请输入矩阵大小 (2-10之间的整数)">
            <button id="generateBtn">生成随机矩阵并计算</button>
        </div>
        
        <div class="matrix-container">
            <div class="matrix">
                <h3 class="matrix-title">原始矩阵</h3>
                <div id="originalMatrix"></div>
            </div>
            
            <div class="matrix">
                <h3 class="matrix-title">传递闭包矩阵</h3>
                <div id="closureMatrix"></div>
            </div>
        </div>
        
        <div class="algorithm-steps">
            <h3>Warshall算法步骤</h3>
            <div id="stepsContainer"></div>
        </div>
    </div>
    

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const matrixSizeInput = document.getElementById('matrixSize');
            const generateBtn = document.getElementById('generateBtn');
            const originalMatrixDiv = document.getElementById('originalMatrix');
            const closureMatrixDiv = document.getElementById('closureMatrix');
            const stepsContainer = document.getElementById('stepsContainer');
            
            let currentMatrix = [];
            let stepCounter = 0;
            
            // 生成随机布尔矩阵
            function generateRandomMatrix(size) {
                const matrix = [];
                for (let i = 0; i < size; i++) {
                    const row = [];
                    for (let j = 0; j < size; j++) {
                        // 生成随机布尔值，有70%的概率为false，30%的概率为true
                        row.push(Math.random() < 0.3);
                    }
                    matrix.push(row);
                }
                return matrix;
            }
            
            // 显示矩阵
            function displayMatrix(matrix, container, highlightCell = null) {
                if (matrix.length === 0) {
                    container.innerHTML = '<p>矩阵未生成</p>';
                    return;
                }
                
                const size = matrix.length;
                let tableHTML = '<table>';
                
                // 表格内容
                for (let i = 0; i < size; i++) {
                    tableHTML += '<tr>';
                    for (let j = 0; j < size; j++) {
                        const value = matrix[i][j];
                        const isHighlighted = highlightCell && highlightCell.i === i && highlightCell.j === j;
                        const cellClass = isHighlighted ? 'changed-cell' : '';
                        tableHTML += `<td class="${cellClass}">${value ? '1' : '0'}</td>`;
                    }
                    tableHTML += '</tr>';
                }
                
                tableHTML += '</table>';
                container.innerHTML = tableHTML;
            }
            
            // 使用Warshall算法计算传递闭包
            function warshallAlgorithm(matrix) {
                const size = matrix.length;
                const closure = [];
                stepsContainer.innerHTML = '';
                stepCounter = 0;
                
                // 复制原始矩阵
                for (let i = 0; i < size; i++) {
                    closure[i] = [...matrix[i]];
                }
                
                // 添加初始步骤
                addStep(stepCounter++, '初始化传递闭包矩阵为原始矩阵', closure);
                
                // Warshall算法核心
                for (let k = 0; k < size; k++) {
                    addStep(stepCounter++, `k = ${k+1}: 考虑中间节点 ${k+1}`, closure, null, true);
                    
                    for (let i = 0; i < size; i++) {
                        for (let j = 0; j < size; j++) {
                            if (closure[i][j] || (closure[i][k] && closure[k][j])) {
                                if (!closure[i][j]) {
                                    closure[i][j] = true;
                                    addStep(stepCounter++, 
                                        `设置 R[${i+1}][${j+1}] = 1 (因为 R[${i+1}][${k+1}] 和 R[${k+1}][${j+1}] 都为1)`, 
                                        closure, {i, j});
                                }
                            }
                        }
                    }
                }
                
                return closure;
            }
            
            // 添加算法步骤
            function addStep(stepNumber, description, matrix, changedCell = null, isKStep = false) {
                const stepDiv = document.createElement('div');
                stepDiv.className = 'step';
                
                const stepHeader = document.createElement('div');
                stepHeader.className = 'step-header';
                stepHeader.innerHTML = `<span class="step-number">${stepNumber}</span><span class="step-description">${description}</span>`;
                stepDiv.appendChild(stepHeader);
                
                // 创建当前步骤的矩阵展示
                const stepMatrix = document.createElement('div');
                stepMatrix.className = 'step-matrix';
                
                const size = matrix.length;
                let tableHTML = '<table>';
                
                // 表格内容
                for (let i = 0; i < size; i++) {
                    tableHTML += '<tr>';
                    for (let j = 0; j < size; j++) {
                        const value = matrix[i][j];
                        const isHighlighted = changedCell && changedCell.i === i && changedCell.j === j;
                        const cellClass = isHighlighted ? 'changed-cell' : '';
                        tableHTML += `<td class="${cellClass}">${value ? '1' : '0'}</td>`;
                    }
                    tableHTML += '</tr>';
                }
                
                tableHTML += '</table>';
                stepMatrix.innerHTML = tableHTML;
                stepDiv.appendChild(stepMatrix);
                
                stepsContainer.appendChild(stepDiv);
                
                // 如果是k步骤，添加分隔线
                if (isKStep) {
                    const separator = document.createElement('div');
                    separator.style.height = '1px';
                    separator.style.background = '#ddd';
                    separator.style.margin = '10px 0';
                    stepsContainer.appendChild(separator);
                }
            }
            
            // 生成矩阵按钮事件
            generateBtn.addEventListener('click', function() {
                let matrixSize = parseInt(matrixSizeInput.value);
                
                if (isNaN(matrixSize) || matrixSize < 2 || matrixSize > 10) {
                    alert('请输入2到10之间的整数！');
                    matrixSizeInput.focus();
                    return;
                }
                
                currentMatrix = generateRandomMatrix(matrixSize);
                displayMatrix(currentMatrix, originalMatrixDiv);
                
                const closureMatrix = warshallAlgorithm(currentMatrix);
                displayMatrix(closureMatrix, closureMatrixDiv);
                
                // 滚动到步骤区域
                document.querySelector('.algorithm-steps').scrollIntoView({ behavior: 'smooth' });
            });
            
            // 初始状态
            originalMatrixDiv.innerHTML = '<p>请输入矩阵大小并点击生成按钮</p>';
            closureMatrixDiv.innerHTML = '<p>请输入矩阵大小并点击生成按钮</p>';
            stepsContainer.innerHTML = '<p>请输入矩阵大小并点击生成按钮查看算法步骤</p>';
        });
    </script>
</body>
</html>
